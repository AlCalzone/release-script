{
  "name": "@alcalzone/release-script-plugin-package",
  "private": true,
  "publishConfig": {
    "access": "public"
  },
  "version": "3.0.0-alpha.0",
  "description": "Plugin for Al Calzone's release script: npm package files",
  "keywords": [],
  "license": "MIT",
  "author": {
    "name": "AlCalzone",
    "email": "d.griesel@gmx.net"
  },
  "main": "build/index.js",
  "exports": {
    ".": "./build/index.js",
    "./package.json": "./package.json",
    "./*.map": "./build/*.js.map",
    "./*": "./build/*.js"
  },
  "types": "build/index.d.ts",
  "typesVersions": {
    "*": {
      "build/index.d.ts": [
        "build/index.d.ts"
      ],
      "*": [
        "build/*"
      ]
    }
  },
  "files": [
    "build/",
    "LICENSE"
  ],
  "engines": {
    "node": ">=12.20"
  },
  "dependencies": {
    "@alcalzone/release-script-core": "^3.0.0-alpha.0",
    "@alcalzone/release-script-testing": "^3.0.0-alpha.0",
    "semver": "^7.3.5"
  },
  "devDependencies": {
    "jest-extended": "^0.11.5"
  },
  "scripts": {
    "clean": "tsc -b tsconfig.build.json --clean",
    "prebuild": "rimraf ./build",
    "build": "tsc -p tsconfig.build.json",
    "watch": "tsc -p tsconfig.build.json --watch"
  },
  "homepage": "https://github.com/AlCalzone/release-script/tree/main/packages/plugin-package#readme",
  "repository": {
    "type": "git",
    "url": "git@github.com:AlCalzone/release-script.git"
  },
  "bugs": {
    "url": "https://github.com/AlCalzone/release-script/issues"
  },
  "readmeFilename": "README.md"
}
