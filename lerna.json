{
	"packages": [
		"packages/*"
	],
	"useWorkspaces": true,
	"npmClient": "yarn",
	"version": "3.0.0-alpha.1",
	"command": {
		"run": {
			"stream": true
		},
		"version": {
			"allowBranch": [
				"master",
				"release-*",
				"next"
			],
			"ignoreChanges": [
				"*.md"
			],
			"exact": true
		}
	}
}
